<div class="caroussel">
  <% @motorcycle.photos.each do |photo| %>
    <div class="caroussel-item">
      <%= cl_image_tag photo.path %>
    </div>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-9 no-padding">
      <div class="horizontal-padding-small">
        <h1><%= @motorcycle.name %></h1>
        <h4>In <%= @motorcycle.address %>, <%= @motorcycle.city %></h4>
        <h4>Owned by <%= @motorcycle.user.first_name.capitalize %> <%= @motorcycle.user.last_name.capitalize %></h4>
      </div>

      <div class="description">
        <h5>About this bike</h5>
        <p><%= @motorcycle.description %></p>
      </div>

      <div class="horizontal-padding-small">
        <p><%= @motorcycle.model %> | <%= @motorcycle.brand %> | Manufactured in <%= @motorcycle.year %></p>
        <p>License plate: <%= @motorcycle.license_plate %></p>
      </div>
    </div>

    <div class="col-xs-12 col-md-3">
      <!-- Booking form -->
      <%= render 'reservations/form' %>
      <hr>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 horizontal-padding-small">
      <h2>User Reviews</h2>
      <div class="container">
        <div class="row">
          <% @motorcycle.reviews.each do |review| %>
            <div class="col-xs-12 col-md-4">
              <div class="card-review">
                <h4>Posted by <%= review.user.first_name %> </h4>
                <p><%= review.content%> </p>
                <h4> <%= review.rating %> </h4>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
