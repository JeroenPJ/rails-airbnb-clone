<%= link_to motorcycle_path(motorcycle) do %>
  <div class="card-motorcycle">
    <% if motorcycle.photos.empty? %>
    <%= cl_image_tag("default-img_hn54at", width: 300, height: 200, crop: :fill) %>
  <% else %>
    <%= cl_image_tag(motorcycle.photos[0].path, width: 300, height: 200, crop: :fill) %>
    <%end%>
    <h2 class="motorcycle-name"><%= motorcycle.name %></h2>
    <h3 class="motorcycle-price"><%= motorcycle.price %></h3>
  </div>
<% end %>
