<div class="container-fluid" id="container-index">
  <div class="row">
    <div class="col-xs-6">
      <!-- List of motorcycles -->
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12">
            <!-- Filter controls -->
            <p>Filter controls</p>
          </div>
        </div>

        <div class="row">
          <h3>Results</h3>
          <% @available_motorcycles.each do |motorcycle| %>
            <% if motorcycle.availability %>
              <div class="col-xs-12 col-md-6">
                <!-- Single motorcycle card -->
                <%= render 'card_motorcycle', motorcycle: motorcycle %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-xs-6">
      <!-- Map -->
    </div>
  </div>
</div>
