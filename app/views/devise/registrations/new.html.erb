<div class="wrapper" id="wrapper-user-session">
  <div class="full-page-img"></div>
  <div class="container" id="container-user-session">
    <h2>Sign up to OpenRoad</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true, label: false, placeholder: "First name", autofocus: true %>
        <%= f.input :last_name, required: true, label: false, placeholder: "Last name" %>
        <%= f.input :email, required: true, label: false, placeholder: "Email address" %>
        <%= f.input :password, required: true, label: false, placeholder: "New password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: false, placeholder: "Enter password again", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>

    <hr>

    <%= render "devise/shared/links" %>
  </div>
</div>
