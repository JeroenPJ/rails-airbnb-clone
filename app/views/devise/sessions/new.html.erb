<div class="wrapper" id="wrapper-user-session">
  <div class="full-page-img"></div>
  <div class="container" id="container-user-session">
    <h2>Log in to OpenRoad</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, label: false, placeholder: "Email address", autofocus: true %>
        <%= f.input :password, required: false, label: false, placeholder: "Your password" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>

    <hr>

    <%= render "devise/shared/links" %>
  </div>
</div>
